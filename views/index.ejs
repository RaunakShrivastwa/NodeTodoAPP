    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="/css/home.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/14097a442a.js" crossorigin="anonymous"></script>

    </head>

    <body>
        <div class="container-fluid   main d-flex justify-content-md-center position-fixed">
            <div class="inner mt-4 shadow">
                <h3 class="text-center">
                    <%= title %>
                </h3>
                <% if (tempData) { %>
                    <form action="/EditDataAPI/?id=<%= single.id %>" method="post">
                        <div class="p-2 border-start-0 border border-end-0 shadow" style="width: 100%;">
                            <!-- for the description -->
                            <div class="form-floating">
                                <input type="text" name="desc" required class="form-control border-0"
                                    placeholder="Leave a comment here" id="floatingTextarea" value="<%= single.desc%>">
                                <label for="floatingTextarea">DESCRIPTION</label>
                            </div>
                            <!-- for the second div  -->
                            <div class="row g-0 mt-2 border-start-0">
                                <!-- for the date -->
                                <div class="col-md">
                                    <div class="form-floating">
                                        <input name="date" required type="date" class="form-control border-start-0"
                                            value="<%= single.date %>" id="floatingInputGrid">
                                        <label for="floatingInputGrid"><strong>DUE DATE</strong></label>
                                    </div>
                                </div>

                                <!-- for the choose catogery -->
                                <div class="col-md cat">
                                    <div class="form-floating">

                                        <select name="catogery" required class="form-select border-end-0 "
                                            id="floatingSelectGrid" aria-label="Floating label select example">
                                            <option selected>
                                                <%=single.catogery %>
                                            </option>
                                            <option value="WORK">WORK</option>
                                            <option value="PROFESSIONAL">PROFESSIONAL</option>
                                            <option value="SCHOOL">SCHOOL</option>
                                            <option value="CODING">CODING</option>
                                            <option value="OFFICE">OFFICE</option>
                                            <option value="SCHOOL">SCHOOL</option>
                                            <option value="COOKING">COOKING</option>
                                        </select>
                                        <label for="floatingSelectGrid"><strong>CATOGERY</strong></label>
                                    </div>
                                </div>
                            </div>
                            <!-- third box div  for add and delete button-->
                            <div class=" mt-4 d-flex justify-content-between">
                                <div>
                                    <div class="form-floating">
                                        <button type="button" id="add" class="btn btn-dark"><i
                                                class="fa fa-cancel m-lg-2 m-md-2 m-sm-2"></i>Cancel</button>
                                    </div>
                                </div>
                                <div>
                                    <div class="form-floating">
                                        <button id="remove" type="submit" class="btn btn-danger"><i
                                                class="fa fa-plus m-lg-2 m-md-2 m-sm-2"></i>Commit</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>

                    <% } <!-- else part if no any todo added -->
                        else { %>
                        <form action="/saveData" method="post">
                            <div class="p-2 border-start-0 border border-end-0 shadow" style="width: 100%;">
                                <!-- for the description -->
                                <div class="form-floating">
                                    <input type="text" name="desc" required class="form-control border-0"
                                        placeholder="Leave a comment here" id="floatingTextarea">
                                    <label for="floatingTextarea">DESCRIPTION</label>
                                </div>
                                <!-- for the second div  -->
                                <div class="row g-0 mt-2 border-start-0">
                                    <!-- for the date -->
                                    <div class="col-md">
                                        <div class="form-floating">
                                            <input name="date" required type="date" class="form-control border-start-0"
                                                id="floatingInputGrid">
                                            <label for="floatingInputGrid"><strong>DUE DATE</strong></label>
                                        </div>
                                    </div>

                                    <!-- for the choose catogery -->
                                    <div class="col-md cat">
                                        <div class="form-floating">

                                            <select name="catogery" required class="form-select border-end-0 "
                                                id="floatingSelectGrid" aria-label="Floating label select example">
                                                <option selected>Choose a Catogery</option>
                                                <option value="WORK">WORK</option>
                                                <option value="PROFESSIONAL">PROFESSIONAL</option>
                                                <option value="SCHOOL">SCHOOL</option>
                                                <option value="CODING">CODING</option>
                                                <option value="OFFICE">OFFICE</option>
                                                <option value="SCHOOL">SCHOOL</option>
                                                <option value="COOKING">COOKING</option>
                                            </select>
                                            <label for="floatingSelectGrid"><strong>CATOGERY</strong></label>
                                        </div>
                                    </div>


                                </div>
                                <!-- third box div  for add and delete button-->
                                <div class=" mt-4 d-flex justify-content-between">
                                    <div>
                                        <div class="form-floating">
                                            <button id="add" class="btn btn-dark"><i
                                                    class="fa fa-plus m-lg-2 m-md-2 m-sm-2"></i>ADD
                                                TASK</button>
                                        </div>
                                    </div>

                                    <div>
                                        <div class="form-floating">
                                            <input name="time" type="time">
                                        </div>
                                    </div>

                                    <div>
                                        <div class="form-floating">
                                            <button id="remove" type="button" class="btn btn-danger"><i
                                                    class="fa fa-remove m-lg-2 m-md-2 m-sm-2"></i>DELETE TASK</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>
                        <% } %>

                            <!-- for the list of todo  -->
                            <div class="shadow  list">
                                <h3 class="p-1">Your Added Todo
                                    <span class="text-black-50 m-md-5 m-sm-3"
                                        style="font-style: oblique; font-size: medium;"><u>Selected</u>:- <span
                                            id="select"></span></span>
                                </h3>

                                <% if (bool) { %>
                                    <div id="cheakForm" class="p-0  list-con" style="overflow-y: auto; height:440px;">
                                        <% for(let i of todoList){%>
                                            <div class="mt-1 form-control p-2 shadow form-body1">
                                                <form action="">
                                                    <div>
                                                        <div class="col-md-12 col-sm-12 row bg-danger">
                                                            <div class="col-md-10 col-sm-9">
                                                                <input id=<%=i.id %> type="checkbox">
                                                                <label class="m-lg-3 m-md-3 m-sm-3">
                                                                    <%= i.desc %>
                                                                </label>
                                                            </div>
                                                            <div title="click to edit list" class="col-md-2 col-sm-3 "
                                                                style="cursor: pointer;">
                                                                <a href="/edit/?id=<%=i.id %>">
                                                                    <img width="25px"
                                                                        src="https://cdn-icons-png.flaticon.com/128/1828/1828911.png"
                                                                        alt="">
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <!-- for the date and work list -->
                                                    <div>
                                                        <div class="col-md-12 col-sm-12 row">
                                                            <div class="col-md-5 col-sm-5">
                                                                <i class="fa-solid fa-calendar-days"></i>
                                                                <label for="">
                                                                    <%= i.date %>
                                                                </label>
                                                            </div>

                                                            <div class="col-md-5 col-sm-9">
                                                                <i class="fa-solid fa-clock"></i>
                                                                <label for="">
                                                                    <%= i.time %>
                                                                </label>
                                                            </div>

                                                            <div class="col-md-2 col-sm-3">
                                                                <img width="25px"
                                                                    src="https://cdn-icons-png.flaticon.com/128/718/718970.png"
                                                                    alt="">
                                                                <label for="">
                                                                    <%= i.catogery %>
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                            <%} %>
                                    </div>
                                    <% } <!-- else part if no any todo added -->
                                        else { %>
                                        <div class="text-center">
                                            <h1>
                                                <img width="90px"
                                                    src="https://cdn-icons-png.flaticon.com/128/3688/3688131.png" alt="">
                                                Sorry
                                            </h1>
                                        </div>
                                        <div class="text-center"><small>you dont't have Todo ,Please Added Todo</small>
                                        </div>
                                        <% } %>
                            </div>
            </div>
        </div>

        <!-- for cheaking cheaked or not for notifications -->
        <div class="toast-container position-fixed top-0 end-0 p-3">
            <div id="liveToast" class="toast bg-dark" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header bg-dark">
                    <img width="20px" src="https://cdn-icons-png.flaticon.com/128/9804/9804983.png" class="rounded me-2"
                        alt="...">
                    <strong class="me-auto text-white">Warning !!!!</strong>
                    <small class="text-white">Now</small>
                    <button type="button" class="btn-close text-danger" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body text-center text-white bg-dark">
                    <input type="checkbox" checked>
                    Please Select Todo
                </div>
            </div>
        </div>

        <!-- for cheaking form data -->
        <div class="toast-container position-fixed top-0 end-0 p-3">
            <div id="liveToast1" class="toast bg-dark" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header bg-dark">
                    <img width="20px" src="https://cdn-icons-png.flaticon.com/128/9804/9804983.png" class="rounded me-2"
                        alt="...">
                    <strong class="me-auto text-white">Warning !!!!</strong>
                    <small class="text-white">Now</small>
                    <button type="button" class="btn-close text-danger" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body text-center text-white bg-dark">
                    <p id="warning"></p>
                </div>
            </div>
        </div>

        <!-- for cheaking form data -->
        <div class="toast-container position-fixed bottom-0 end-0 p-3">
            <div id="liveToast2" class="toast bg-dark" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header bg-dark">
                    <img width="20px" src="https://cdn-icons-png.flaticon.com/128/9804/9804983.png" class="rounded me-2"
                        alt="...">
                    <strong class="me-auto text-white">Warning !!!!</strong>
                    <small class="text-white">Now</small>
                    <button type="button" class="btn-close text-danger" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body text-center text-white bg-white">
                    <p>Todo Addedd Successfull</p>
                </div>
            </div>
        </div>

        <script type="text/javascript" src="/js/data.js"></script>
    </body>

    </html>